<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.dima.lab1.MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchField" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GugÄƒling"
            android:id="@+id/searchButton" android:layout_below="@+id/searchField" android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/searchField"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wait ..."
            android:id="@+id/notifyButton" android:layout_below="@+id/searchButton" android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/searchButton"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cam"
            android:id="@+id/cameraButton" android:layout_below="@+id/notifyButton" android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/notifyButton"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bzzzzzzz"
            android:id="@+id/vibrationButton" android:layout_below="@+id/cameraButton" android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/cameraButton"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mImageView2"
            android:layout_below="@+id/vibrationButton" android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"/>
</RelativeLayout>
